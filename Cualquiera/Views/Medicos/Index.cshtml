@model IEnumerable<Cualquiera.Models.Medico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="submit" class="btn btn-success">
        <a asp-action="Create" style="color: inherit; text-decoration: none;">Create New</a>
    </button>
</p>
<form asp-controller="Medicos" asp-action="Index">
    <!--<p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="boton" class="btn btn-dark" />
    </p>-->
</form>
<table class="table" id = "MedicosTable">
    <thead>
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
            
                    @Html.DisplayNameFor(model => model.Disponible)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" class ="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                 
            </td>
        </tr>
}
    </tbody>
</table>
<button id="generarPDF">Generar PDF</button>
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#MedicosTable").DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#generarPDF").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Medicos/ProcesarDatos",
                    data: JSON.stringify({ datos: "Datos de ejemplo" }), // Reemplaza "Datos de ejemplo" con los datos que deseas enviar
                    contentType: "application/json",
                    success: function (response) {
                        if (response.success) {
                            // Redirige a la URL del controlador que devuelve el PDF
                            window.location.href = response.url;
                        } else {
                            console.log("Error al generar el PDF");
                        }
                    },
                    error: function () {
                        console.log("Error en la solicitud");
                    }
                });
            });
        });
    </script>
}