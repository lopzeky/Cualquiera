@model IEnumerable<Cualquiera.Models.Medico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="submit" class="btn btn-success">
        <a asp-action="Create" style="color: inherit; text-decoration: none;">Create New</a>
    </button>
</p>
<form asp-controller="Medicos" asp-action="Index">
    <!--<p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="boton" class="btn btn-dark" />
    </p>-->
</form>
<table class="table" id="MedicosTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Disponible)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponible)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<form id="donForm1" method="POST" action="/Controllers/Pdfcontroller/GeneratePdf1">
    <input type="hidden" name="datos1">

</form>
<button id="botoncito1" name="botoncito1">Generar Reporte</button>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#MedicosTable").DataTable();
        });
    </script>
    <script src="js/sdd.js"></script>
}